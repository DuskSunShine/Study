<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="SafeView">
        <attr name="text" format="string"/>
    </declare-styleable>

    <declare-styleable name="TimeView">
        <attr name="clockDialColor" format="color" />
        <attr name="clockDialFillType" format="integer">
            <enum name="stroke" value="0" />
            <enum name="fill" value="1" />
        </attr>
        <attr name="scaleColor" format="color"/>
        <attr name="clockDialStrokeWidth" format="dimension"/>
        <attr name="centerPointRadius" format="dimension"/>
        <attr name="scaleStrokeWidth" format="dimension"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="littleTextColor" format="color"/>
        <attr name="littleTextSize" format="dimension"/>
        <attr name="secondIndicatorColor" format="color"/>
        <attr name="secondIndicatorWidth" format="dimension"/>
        <attr name="minIndicatorColor" format="color"/>
        <attr name="minIndicatorWidth" format="dimension"/>
        <attr name="hourIndicatorColor" format="color"/>
        <attr name="hourIndicatorWidth" format="dimension"/>
        <attr name="hScaleHeight" format="dimension"/>
        <attr name="mScaleHeight" format="dimension"/>
        <attr name="sScaleHeight" format="dimension"/>
        <attr name="paddingOffset" format="dimension"/>
        <attr name="hour" format="integer"/>
        <attr name="min" format="integer"/>
        <attr name="second" format="integer"/>
        <attr name="systemTime" format="boolean"/>
    </declare-styleable>
</resources>

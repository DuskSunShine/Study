<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SimpleTextView">
        <attr name="simpleTextSize" format="dimension"/>
        <attr name="simpleTextColor" format="color"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="simpleText" format="string"/>
    </declare-styleable>

    <declare-styleable name="CircleView">
        <attr name="srcBitmap" format="reference"/>
        <attr name="tileMode" format="integer">
            <enum name="repeat" value="0"/>
            <enum name="clamp" value="1"/>
            <enum name="mirror" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="rectBorder" format="dimension"/>
        <attr name="backColor" format="color"/>
        <attr name="style" format="integer">
            <enum name="fill" value="0"/>
            <enum name="stroke" value="1"/>
        </attr>
        <attr name="radius" format="dimension"/>
        <attr name="labTextSize" format="dimension"/>
        <attr name="labTextColor" format="dimension"/>
    </declare-styleable>
</resources>